[Unit]
Description=userve
Wants=network-online.target

[Service]
ExecStart=/usr/local/bin/userve \
    --source=/home/jcgregorio/blog/_site \
    --redirect_file=/home/jcgregorio/blog/_site/redirects.txt \
    --alsologtostderr

Restart=always
User=root
Group=root
LimitNOFILE=10000

[Install]
WantedBy=multi-user.target
