{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": true,
    "rewrites": [
      {
        "source": "/news/feed/",
        "destination": "/news/feed/index.xml"
      },
      {
        "source": "/feed",
        "destination": "/news/feed/index.xml"
      },
      {
        "source": "/feeds",
        "destination": "/news/feed/index.xml"
      },
      {
        "source": "/rss",
        "destination": "/news/feed/index.xml"
      },
      {
        "source": "/index.atom",
        "destination": "/news/feed/index.xml"
      },
      {
        "source": "/news/feed/index.atom",
        "destination": "/news/feed/index.xml"
      }
    ],
    "headers": [
      {
        "source": "**/*",
        "headers": [
          {
            "key": "Referrer-Policy",
            "value": "unsafe-url"
          }
        ]
      }
    ]
  }
}